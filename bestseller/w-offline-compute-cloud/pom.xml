    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <mysql.ip>54.222.209.13</mysql.ip>
                <mysql.port>3306</mysql.port>
                <mysql.name>wifianalytics_bitmap</mysql.name>
                <mysql.user>wifianalytics</mysql.user>
                <mysql.pwd>wifianalytics</mysql.pwd>
            </properties>
        </profile>
        <profile>
