<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="kai.zhang" id="1507713056-1">
        <createTable tableName="TD_PROJECT_HEAT_MAP">
            <column autoIncrement="true" name="id" type="BIGINT" remarks="主键">
                <constraints primaryKey="true"/>
            </column>
            <column name="project_id" remarks="项目id" type="BIGINT(20)"/>
            <column name="timestamp" remarks="探针获取用户设备数据的时间戳" type="TIMESTAMP"/>
            <column name="date" remarks="日期" type="varchar(100)"/>
            <column name="hour" remarks="小时" type="varchar(100)"/>
            <column name="mac" remarks="用户设备mac" type="varchar(400)"/>
            <column name="coordinates" remarks="用户设备探针当前扫描记录坐标信息" type="varchar(400)"/>
            <column name="in_room" remarks="用户当前坐标是否在店铺内" type="tinyint"/>
            <column name="x" remarks="横坐标" type="double"/>
            <column name="y" remarks="纵坐标" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
