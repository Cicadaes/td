<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>0.0.1-SNAPSHOT</id>
	<formats>
        <format>jar</format> <!--打包文件格式-->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
		<fileSet>
			<directory>../../../../dmp-core/target/classes</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>/td/enterprise/dmp/core/entity/**/*.class</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../../../../dmp-common/target/classes</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>/td/enterprise/dmp/base/**/*.class</include>
				<include>/td/enterprise/dmp/common/entity/**/*.class</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>