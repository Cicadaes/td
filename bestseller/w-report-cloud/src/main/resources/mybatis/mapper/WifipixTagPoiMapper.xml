<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="td.enterprise.dao.WifipixTagPoiDao">
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="td.enterprise.entity.WifipixTagPoi">
        <result column="id" property="id"/>
        <result column="tag_name" property="tagName"/>
        <result column="type" property="type"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_leaf" property="isLeaf"/>
    </resultMap>

    <!-- TD_WIFIPIX_TAG_POI table all fields -->
    <sql id="Base_Column_List">
        id,tag_name,type,parent_id,is_leaf
    </sql>

    <!-- 查询条件 -->
    <sql id="Base_Where_Clause">
        where 1=1
        <trim suffixOverrides=",">
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="tagName != null and tagName != ''">
                and tag_name = #{tagName}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="parentId != null and parentId != ''">
                and parent_id = #{parentId}
            </if>
            <if test="isLeaf != null and isLeaf != ''">
                and is_leaf = #{isLeaf}
            </if>
        </trim>
    </sql>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="Object">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into TD_WIFIPIX_TAG_POI(id,tag_name,type,parent_id,is_leaf)
        values(#{id},#{tagName},#{type},#{parentId},#{isLeaf})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="updateByPrimaryKey" parameterType="Object">
        update TD_WIFIPIX_TAG_POI set tag_name=#{tagName},type=#{type},parent_id=#{parentId},is_leaf=#{isLeaf} where
        id=#{id}
    </update>

    <!-- 修改记录，只修改只不为空的字段 -->
    <update id="updateByPrimaryKeySelective" parameterType="Object">
        update TD_WIFIPIX_TAG_POI set
        <trim suffixOverrides=",">
            <if test="tagName != null  ">
                tag_name=#{tagName},
            </if>
            <if test="type != null  ">
                type=#{type},
            </if>
            <if test="parentId != null  ">
                parent_id=#{parentId},
            </if>
            <if test="isLeaf != null  ">
                is_leaf=#{isLeaf},
            </if>
        </trim>
        where id=#{id}
    </update>

    <!-- 根据id查询 WiFiPix标签 -->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from TD_WIFIPIX_TAG_POI where id = #{id}
    </select>

    <!-- 删除记录 -->
    <delete id="deleteByPrimaryKey" parameterType="Object">
        delete from TD_WIFIPIX_TAG_POI where id = #{id}
    </delete>

    <!-- WiFiPix标签 列表总数-->
    <select id="queryByCount" resultType="java.lang.Integer" parameterType="Object">
        select count(1) from TD_WIFIPIX_TAG_POI
        <include refid="Base_Where_Clause"/>
    </select>

    <!-- 查询WiFiPix标签列表 -->
    <select id="queryByList" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from TD_WIFIPIX_TAG_POI
        <include refid="Base_Where_Clause"/>
        <if test="pager.orderCondition != null and pager.orderCondition != ''">
            ${pager.orderCondition}
        </if>
        <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''">
            ${pager.mysqlQueryCondition}
        </if>
    </select>
</mapper>
