<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="td.enterprise.dao.ProjectUserRelationDao">
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="td.enterprise.entity.ProjectUserRelation">
        <result column="id" property="id"/>
        <result column="project_id" property="projectId"/>
        <result column="login" property="login"/>
        <result column="status" property="status"/>
        <result column="type" property="type"/>
        <result column="order_index" property="orderIndex"/>
        <result column="create_by" property="createBy"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="updater" property="updater"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- TD_PROJECT_USER_RELATION table all fields -->
    <sql id="Base_Column_List">
        id,project_id,login,status,type,order_index,create_by,creator,create_time,update_by,updater,update_time
    </sql>

    <!-- 查询条件 -->
    <sql id="Base_Where_Clause">
        where 1=1
        <trim suffixOverrides=",">
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="projectId != null and projectId != ''">
                and project_id = #{projectId}
            </if>
            <if test="login != null and login != ''">
                and login = #{login}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="orderIndex != null and orderIndex != ''">
                and order_index = #{orderIndex}
            </if>
        </trim>
    </sql>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="Object">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into
        TD_PROJECT_USER_RELATION(id,project_id,login,status,type,order_index,create_by,creator,create_time,update_by,updater,update_time)
        values(#{id},#{projectId},#{login},#{status},#{type},#{orderIndex},#{createBy},#{creator},now(),#{updateBy},#{updater},now())
    </insert>

    <!-- 根据id，修改记录-->
    <update id="updateByPrimaryKey" parameterType="Object">
        update TD_PROJECT_USER_RELATION set
        project_id=#{projectId},login=#{login},status=#{status},type=#{type},order_index=#{orderIndex},create_by=#{createBy},creator=#{creator},create_time=now(),update_by=#{updateBy},updater=#{updater},update_time=now()
        where id=#{id}
    </update>

    <!-- 修改记录，只修改只不为空的字段 -->
    <update id="updateByPrimaryKeySelective" parameterType="Object">
        update TD_PROJECT_USER_RELATION set
        <trim suffixOverrides=",">
            <if test="projectId != null  ">
                project_id=#{projectId},
            </if>
            <if test="login != null  ">
                login=#{login},
            </if>
            <if test="status != null  ">
                status=#{status},
            </if>
            <if test="type != null  ">
                type=#{type},
            </if>
            <if test="orderIndex != null  ">
                order_index=#{orderIndex},
            </if>
            <if test="createBy != null  ">
                create_by=#{createBy},
            </if>
            <if test="creator != null  ">
                creator=#{creator},
            </if>
            <if test="createTime != null  ">
                create_time=#{createTime},
            </if>
            <if test="updateBy != null  ">
                update_by=#{updateBy},
            </if>
            <if test="updater != null  ">
                updater=#{updater},
            </if>
            <if test="updateTime != null  ">
                update_time=#{updateTime},
            </if>
        </trim>
        where id=#{id}
    </update>

    <!-- 根据id查询 用户项目关系表 -->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from TD_PROJECT_USER_RELATION where id = #{id}
    </select>

    <!-- 删除记录 -->
    <delete id="deleteByPrimaryKey" parameterType="Object">
        delete from TD_PROJECT_USER_RELATION where id = #{id}
    </delete>

    <!-- 用户项目关系表 列表总数 -->
    <select id="queryByCount" resultType="java.lang.Integer" parameterType="Object">
        select count(1) from TD_PROJECT_USER_RELATION
        <include refid="Base_Where_Clause"/>
    </select>

    <!-- 查询用户项目关系表列表 -->
    <select id="queryByList" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from TD_PROJECT_USER_RELATION
        <include refid="Base_Where_Clause"/>
        <if test="pager.orderCondition != null and pager.orderCondition != ''">
            ${pager.orderCondition}
        </if>
        <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''">
            ${pager.mysqlQueryCondition}
        </if>
    </select>

    <!-- 查询该用户项目此类行最大orderIndex -->
    <select id="queryMaxOrderIndex" resultType="java.lang.Integer" parameterType="Object">
        select max(order_index) from TD_PROJECT_USER_RELATION
        <include refid="Base_Where_Clause"/>
    </select>

    <!-- 按顺序查找用户设置 -->
    <select id="queryListByOrder" resultMap="BaseResultMap" parameterType="Object">
        select
        id,project_id,login,status,type,max(order_index)
        from TD_PROJECT_USER_RELATION
        <include refid="Base_Where_Clause"/>
        group by
        id,project_id,login,status,type
        order by max(order_index) desc
    </select>

</mapper>   
