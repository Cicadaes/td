	  SELECT LAST_INSERT_ID()
    </selectKey>
      insert into 
TD_CHANGE_LOG(id,table_name,module_id,before_value,after_value,status,create_by,creator,create_time,update_by,updater,update_time)
 values(#{id},#{tableName},#{moduleId},#{beforeValue},#{afterValue},#{status},#{createBy},#{creator},now(),#{updateBy},#{updater},now())
  </insert>

  <!-- 根据id，修改记录-->  
  <update id="updateByPrimaryKey" parameterType="Object" >
      update TD_CHANGE_LOG set table_name=#{tableName},module_id=#{moduleId},before_value=#{beforeValue},after_value=#{afterValue},status=#{status},create_by=#{createBy},creator=#{creator},update_by=#{updateBy},updater=#{updater},update_time=now() where id=#{id}
  </update>
 
