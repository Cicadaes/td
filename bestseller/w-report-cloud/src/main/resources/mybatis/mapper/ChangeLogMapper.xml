  <update id="updateByPrimaryKeySelective" parameterType="Object" >
      update TD_CHANGE_LOG set 
	<if test="tableName != null  ">
		table_name=#{tableName},
	</if>
	<if test="moduleId != null  ">
		module_id=#{moduleId},
	</if>
	<if test="beforeValue != null  ">
		before_value=#{beforeValue},
	</if>
