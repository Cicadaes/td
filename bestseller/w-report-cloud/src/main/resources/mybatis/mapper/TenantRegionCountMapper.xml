        INSERT INTO TD_TENANT_REGION_COUNT(tenant_id, project_id, crowd_id, region_type, region_name, run_date,
        day_type, hour, metric_value, cycle_statistics, start_date, end_date)
        SELECT t.tenant_id, d.project_id, c.crowd_id, t.region_type, t.region_name, t.run_date, t.day_type, t.hour,
        t.metric_value, t.cycle_statistics, t.start_date, t.end_date
        FROM
        (SELECT s.tenant_id, s.type, s.region_type, s.region_name, s.run_date, s.day_type, s.hour, s.cycle_statistics,
        s.start_date, s.end_date, SUM(IFNULL(s.metric_value,0)) AS metric_value
        FROM
        (SELECT DISTINCT tb.tenant_id, cd.type, tb.region_type, tb.region_name, tb.run_date, tb.day_type, tb.hour,
        tb.cycle_statistics, tb.start_date, tb.end_date, tb.metric_value, tb.project_id
        FROM TD_TENANT_REGION_COUNT tb
        JOIN TD_CROWD cd
        ON tb.project_id = cd.attr1
        AND tb.crowd_id = cd.id
        WHERE tb.project_id IN (
        SELECT r.project_id FROM TD_PROJECT_RELATION r
        WHERE r.project_parent_id = #{projectId})
        AND tb.run_date = #{runDate}
        )s
        GROUP BY s.tenant_id, s.type, s.region_type, s.region_name, s.run_date, s.day_type, s.hour, s.cycle_statistics,
        s.start_date, s.end_date
        )t,
        (SELECT DISTINCT project_parent_id AS project_id FROM TD_PROJECT_RELATION WHERE project_parent_id = #{projectId}
        )d,
        (SELECT DISTINCT id AS crowd_id, type, attr1 FROM TD_CROWD
        )c
        WHERE c.attr1 = d.project_id
        AND c.type = t.type
