      update TD_BS_USER set user_id=#{userId},name=#{name},ky_sign=#{kySign},group_sign=#{groupSign},logical_city_code=#{logicalCityCode},department=#{department},position=#{position},logical_city=#{logicalCity},brand_full_name=#{brandFullName},brand_short_name=#{brandShortName},sync_date=#{syncDate},email=#{email},tenant_sign=#{tenantSign},shop_code=#{shopCode},user_sign=#{userSign} where id=#{id}
  </update>
 
