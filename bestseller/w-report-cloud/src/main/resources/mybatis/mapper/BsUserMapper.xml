	  </if>
	      <if test="tenantSign != null and tenantSign != ''" >
        and tenant_sign =  #{tenantSign}
	  </if>
	      <if test="shopCode != null and shopCode != ''" >
        and shop_code =  #{shopCode}
	  </if>
	      <if test="userSign != null and userSign != ''" >
        and user_sign =  #{userSign}
	  </if>
    </trim>
  </sql>
   
  <!-- 插入记录 -->
  <insert id="insert" parameterType="Object" >
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	  SELECT LAST_INSERT_ID()
    </selectKey>
      insert into 
TD_BS_USER(id,user_id,name,ky_sign,group_sign,logical_city_code,department,position,logical_city,brand_full_name,brand_short_name,sync_date,email,tenant_sign,shop_code,user_sign)
 values(#{id},#{userId},#{name},#{kySign},#{groupSign},#{logicalCityCode},#{department},#{position},#{logicalCity},#{brandFullName},#{brandShortName},#{syncDate},#{email},#{tenantSign},#{shopCode},#{userSign})
  </insert>

  <!-- 根据id，修改记录-->  
