	<result column="ky_sign" property="kySign"/>
	<result column="group_sign" property="groupSign"/>
	<result column="logical_city_code" property="logicalCityCode"/>
	<result column="department" property="department"/>
	<result column="position" property="position"/>
	<result column="logical_city" property="logicalCity"/>
