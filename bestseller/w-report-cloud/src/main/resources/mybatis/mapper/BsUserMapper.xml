  <sql id="Base_Where_Clause">
    where 1=1
    <trim suffixOverrides="," >
	      <if test="id != null and id != ''" >
        and id =  #{id}
	  </if>
	      <if test="userId != null and userId != ''" >
        and user_id =  #{userId}
	  </if>
	      <if test="name != null and name != ''" >
