    <insert id="batchSelectAndInsert" useGeneratedKeys="true" parameterType="java.util.List">
        INSERT INTO
        TD_TENANT_TOP_AREA_COUNT(tenant_id,project_id,crowd_id,run_date,area_type,metric_value,cycle_statistics,start_date,end_date,area_name)
        SELECT t.tenant_id, d.project_id, c.crowd_id, t.run_date, t.area_type, t.metric_value, t.cycle_statistics,
        t.start_date, t.end_date, t.area_name
        FROM
        (SELECT s.tenant_id, s.type, s.run_date, s.area_type, SUM(IFNULL(s.metric_value,0)) AS metric_value,
        s.cycle_statistics, s.start_date, s.end_date, s.area_name
        FROM
        (SELECT DISTINCT tb.tenant_id, cd.type, tb.run_date, tb.area_type, tb.metric_value, tb.cycle_statistics,
        tb.start_date, tb.end_date, tb.area_name
        FROM TD_TENANT_TOP_AREA_COUNT tb
        JOIN TD_CROWD cd
        ON tb.project_id = cd.attr1
        AND tb.crowd_id = cd.id
        WHERE tb.project_id IN (
        SELECT r.project_id FROM TD_PROJECT_RELATION r
        WHERE r.project_parent_id = #{projectId})
        AND tb.run_date = #{runDate}
        )s
        GROUP BY s.tenant_id, s.type, s.run_date, s.area_type, s.cycle_statistics, s.start_date, s.end_date, s.area_name
        )t,
        (SELECT DISTINCT project_parent_id AS project_id FROM TD_PROJECT_RELATION WHERE project_parent_id = #{projectId}
        )d,
        (SELECT DISTINCT id AS crowd_id, type, attr1 FROM TD_CROWD
        )c
        WHERE c.attr1 = d.project_id
        AND c.type = t.type
    </insert>
