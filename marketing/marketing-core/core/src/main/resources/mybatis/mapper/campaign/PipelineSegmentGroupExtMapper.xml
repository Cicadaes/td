<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.talkingdata.marketing.core.dao.campaign.PipelineSegmentGroupDao" >
    <select id="findGroupsByGroupName" parameterType="map" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM TD_MKT_PIPELINE_SEGMENT_GROUP
        WHERE group_name LIKE concat('%',#{groupName},'%')
    </select>

    <select id="findGroupByGroupName" parameterType="map" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM TD_MKT_PIPELINE_SEGMENT_GROUP
        WHERE group_name=#{groupName}
    </select>

</mapper>
