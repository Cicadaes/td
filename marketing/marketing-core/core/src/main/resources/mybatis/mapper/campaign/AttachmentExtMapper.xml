<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.talkingdata.marketing.core.dao.campaign.AttachmentDao" >


    <select id="selectByCrowdId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    select <include refid="Base_Column_List" />
      from TD_MKT_ATTACHMENT
     where `ref_id` = #{crowd_id}

    </select>

    <delete id="deleteByCreateTime" parameterType="string">
        delete from TD_MKT_ATTACHMENT WHERE create_time > #{createTime}
    </delete>


    <select id="selectByEquityConfigId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select <include refid="Base_Column_List" />
        from TD_MKT_ATTACHMENT a,TD_MKT_EQUITY_CONFIG b
        where a.id = b.attachment_id and b.id = #{equityConfigId}

    </select>
</mapper>
