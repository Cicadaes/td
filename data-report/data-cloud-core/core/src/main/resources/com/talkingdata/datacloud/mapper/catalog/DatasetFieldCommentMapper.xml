  <update id="updateByPrimaryKey" parameterType="com.talkingdata.datacloud.entity.catalog.DatasetFieldComment" >
    update dict_dataset_field_comment
       set `dataset_id` = #{datasetId},
           `is_default` = #{isDefault}
