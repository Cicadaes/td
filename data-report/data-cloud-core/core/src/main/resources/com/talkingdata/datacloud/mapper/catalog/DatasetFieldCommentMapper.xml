       and `comment_id` = #{commentId}
  </update>

  <!-- 修改记录，只修改只不为空的字段 -->
  <update id="updateByPrimaryKeySelective" parameterType="com.talkingdata.datacloud.entity.catalog.DatasetFieldComment" >
    update dict_dataset_field_comment
    <set >
      <if test="datasetId != null" >
        `dataset_id` = #{datasetId},
      </if>
      <if test="isDefault != null" >
        `is_default` = #{isDefault},
      </if>
    </set>
     where `field_id` = #{fieldId},
       and `comment_id` = #{commentId}
  </update>

  <!-- 根据id查询 dict_dataset_field_comment -->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="com.talkingdata.datacloud.entity.catalog.DatasetFieldCommentKey">
    select <include refid="Base_Column_List" /> 
      from dict_dataset_field_comment
     where `field_id` = #{fieldId},
       and `comment_id` = #{commentId}
  </select>

  <!-- 删除记录 -->
  <delete id="deleteByPrimaryKey" parameterType="com.talkingdata.datacloud.entity.catalog.DatasetFieldCommentKey">
